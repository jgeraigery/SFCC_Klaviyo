<?xml version="1.0" encoding="UTF-8"?>
<metadata xmlns="http://www.demandware.com/xml/impex/metadata/2006-10-31">

     <type-extension type-id="SitePreferences">
        <custom-attribute-definitions>

            <attribute-definition attribute-id="klaviyo_account">
                <display-name xml:lang="x-default">Klaviyo Account</display-name>
                <description xml:lang="x-default">Your Klaviyo account identifier</description>
                <type>string</type>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
                <field-length>0</field-length>
            </attribute-definition>

            <attribute-definition attribute-id="klaviyo_api_key">
                <display-name xml:lang="x-default">Klaviyo Private API Key</display-name>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>

            <attribute-definition attribute-id="klaviyo_enabled">
                <display-name xml:lang="x-default">Klaviyo Enabled</display-name>
                <type>boolean</type>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <default-value>false</default-value>
            </attribute-definition>

            <attribute-definition attribute-id="klaviyo_image_size">
                <display-name xml:lang="x-default">Image type for Klaviyo</display-name>
                <type>string</type>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <default-value>large</default-value>
            </attribute-definition>

            <attribute-definition attribute-id="klaviyo_email_selectors">
                <display-name xml:lang="x-default">Klaviyo Email Selectors</display-name>
                <description xml:lang="x-default">Enter CSS selectors to capture data from an input field on any page (ex: #idname, .classname, etc.)</description>
                <type>set-of-string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>

            <attribute-definition attribute-id="klaviyo_sendEventsAsSFCC">
                <display-name xml:lang="x-default">Label Events as SFCC</display-name>
                <description xml:lang="x-default">Generally if this is a brand new integration with Klaviyo, set this to Yes. If this is an upgrade to a previous Klaviyo integration, set it to No.</description>
                <type>boolean</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <default-value>false</default-value>
            </attribute-definition>

        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="klaviyo">
                <display-name xml:lang="x-default">Klaviyo </display-name>
                <attribute attribute-id="klaviyo_enabled"/>
                <attribute attribute-id="klaviyo_api_key"/>
                <attribute attribute-id="klaviyo_account"/>
                <attribute attribute-id="klaviyo_sendEventsAsSFCC"/>
                <attribute attribute-id="klaviyo_image_size"/>
                <attribute attribute-id="klaviyo_email_selectors"/>
            </attribute-group>
        </group-definitions>
    </type-extension>
</metadata>
